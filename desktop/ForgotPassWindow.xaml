<Window x:Class="sistecDesktop.ForgotPassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sistecDesktop"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Style="{StaticResource ForgotPass}"
                Width="400" Height="200">

            <StackPanel >

                <TextBlock Text="Redefinição de Senha" 
                           Width="auto" TextAlignment="Center"
                           Foreground="{StaticResource brush-midnightNavy}"
                           FontFamily="{StaticResource MontserratBold}"
                           FontSize="18" Margin="0 15 0 0"/>

                <TextBlock Style="{StaticResource ForgotPassText}"
                           FontFamily="{StaticResource MontserratRegular}"
                           FontSize="14"
                           Margin="0 10 0 20"/>

                <Button Style="{StaticResource MyButton}"
                        Command="{Binding CloseCommand}"
                        Content="Entendido" FontSize="12"
                        Width="100" Height="50" Margin="0 0 0 10"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
