<UserControl x:Class="sistecDesktop.Views.Popups.MotivoResolucao"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sistecDesktop.Views.Popups"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="{StaticResource brush-lavenderWeb}">
        <Grid>
            <!--#region Definições do grid-->
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <!--#endregion-->

            <!--#region Título-->
            <Border Grid.Row="0" Padding="20"
                    Background="ForestGreen">
                <StackPanel>
                    <TextBlock Text="Resolver Chamado"
                           Style="{StaticResource MyTextblock}"
                           Foreground="{StaticResource brush-lavenderMist}"
                           FontSize="20"/>
                    <TextBlock Text="Como você resolveu esse chamado?"
                           Style="{StaticResource MyTextblock}"
                           Foreground="{StaticResource brush-lavenderMist}"
                               FontFamily="{StaticResource MontserratRegular}"
                           FontSize="14"/>
                </StackPanel>
            </Border>
            <!--#endregion-->

            <!--#region Informações do chamado-->
            <Border Grid.Row="1" Margin="10" Padding="10"
                    Background="{StaticResource brush-lavenderMist}"
                    BorderBrush="{StaticResource brush-coolGray}"
                    BorderThickness="1" CornerRadius="5">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Informações do Chamado"
                               Style="{StaticResource MyTextblock}"/>

                        <TextBlock Text="ID: "/>
                        <TextBlock Text="Categoria: "/>
                        <TextBlock Text="Problema: "/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{Binding IdChamado}"/>
                        <TextBlock Text="{Binding Categoria}"/>
                        <TextBlock Text="{Binding Problema}"/>
                    </StackPanel>
                </Grid>
            </Border>
            <!--#endregion-->

            <!--#region Relatório-->
            <StackPanel Grid.Row="2">
                <TextBlock Text="Relatório da Resolução" Margin="10 5 0 0"
                           Style="{StaticResource MyTextblock}"/>

                <TextBox Text="{Binding Motivo, UpdateSourceTrigger=PropertyChanged}"
                         Margin="10 5 0 0" Height="100"
                         Style="{StaticResource MyTextBox}"/>
            </StackPanel>
            
            <TextBlock Text="Mínimo 20 caracteres" Grid.Row="3"
                       Margin="10 5 0 0" Foreground="Red"/>
            <!--#endregion-->
            
            <!--#region Botões-->
            <StackPanel Grid.Row="4" Orientation="Horizontal"
                        HorizontalAlignment="Right">
                
                <Button Content="Cancelar"
                        Style="{StaticResource HomeButtons}"
                        Command="{Binding CancelCommand}"
                        Height="50" Width="100"/>
                
                <Button Content="Resolver Chamado"
                        Style="{StaticResource HomeButtons}"
                        Command="{Binding SaveCommand}"
                        Foreground="{StaticResource brush-White}"
                        Background="ForestGreen"
                        Height="50" Width="130"/>
            </StackPanel>
            <!--#endregion-->
        </Grid>
    </Border>
</UserControl>
