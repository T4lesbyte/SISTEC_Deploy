<UserControl x:Class="sistecDesktop.Views.Popups.OpenTicketView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sistecDesktop.Views.Popups"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">

    <Border Background="{StaticResource brush-lavenderMist}">
        <Grid>
            <!--#region Definições do grid-->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!--#endregion-->

            <!--#region Título da Página-->
            <Border Background="{StaticResource brush-midnightNavy}" 
                    Grid.Row="0" Padding="10">

                <TextBlock Text="Abrir Novo Chamado"
                   Style="{StaticResource MyTextblock}"
                   Foreground="{StaticResource brush-White}"
                   FontSize="24" Margin="10"/>
            </Border>
            <!--#endregion-->

            <!--#region Título -->
            <StackPanel Grid.Row="1" Margin="10">
                <TextBlock Text="Título do Chamado:"
                           Style="{StaticResource MyTextblock}"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MyTextBox}"
                         Height="30"/>
            </StackPanel>
            <!--#endregion-->

            <!--#region Prioridade -->
            <StackPanel Grid.Row="2" Margin="10">
                <TextBlock Text="Prioridade:" 
                               Style="{StaticResource MyTextblock}"/>

                <ComboBox SelectedValue="{Binding Priority}"
                          SelectedValuePath="Tag"
                          Height="30">
                    <ComboBoxItem Content="Baixa" Tag="1"/>
                    <ComboBoxItem Content="Média" Tag="2"/>
                    <ComboBoxItem Content="Alta" Tag="3"/>
                    <ComboBoxItem Content="Urgente" Tag="4"/>
                </ComboBox>
            </StackPanel>
            <!--#endregion-->

            <!--#region Categoria -->
            <StackPanel Grid.Row="3" Margin="10">
                <TextBlock Text="Categoria:" 
                               Style="{StaticResource MyTextblock}"/>

                <ComboBox SelectedValue="{Binding CategoriaSelecionada, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
           SelectedValuePath="Tag"
           IsSynchronizedWithCurrentItem="True"
           Height="30">
                    <ComboBoxItem Content="Hardware" Tag="hardware"/>
                    <ComboBoxItem Content="Software" Tag="software"/>
                    <ComboBoxItem Content="Rede" Tag="rede"/>
                    <ComboBoxItem Content="Acesso" Tag="acesso"/>
                    <ComboBoxItem Content="Email" Tag="email"/>
                    <ComboBoxItem Content="Outros" Tag="outros"/>
                </ComboBox>
            </StackPanel>
            <!--#endregion-->

            <!--#region Problema-->
            <StackPanel Grid.Row="4" Margin="10">
                <TextBlock Text="Problema:"
                           Style="{StaticResource MyTextblock}"/>
                <ComboBox ItemsSource="{Binding ProblemasDisponiveis}"
              SelectedValue="{Binding ProblemaSelecionado}"
              DisplayMemberPath="Label"
              SelectedValuePath="Value"
              Height="30">
                </ComboBox>
            </StackPanel>
            <!--#endregion-->

            <!--#region Descrição -->
            <StackPanel Grid.Row="5" Margin="10">
                <TextBlock Text="Descrição:"
                           Style="{StaticResource MyTextblock}"/>

                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MyTextBox}"
                         TextWrapping="Wrap" Height="100"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
            <!--#endregion-->

            <!--#region Mensagem de erro -->
            <TextBlock Grid.Row="6"
                   Text="{Binding ErrorMessage}"
                   Style="{StaticResource MyTextblock}"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   Margin="10"/>
            <!--#endregion-->

            <!--#region Botões -->
            <StackPanel Grid.Row="7" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="10">
                <Button Content="Cancelar" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Command="{Binding CancelCommand}"/>
                <Button Content="Criar Chamado" 
                    Width="120" 
                    Height="35"
                    Background="#4CAF50"
                    Foreground="White"
                    Command="{Binding CreateTicketCommand}"/>
            </StackPanel>
            <!--#endregion-->
        </Grid>
    </Border>
</UserControl>
