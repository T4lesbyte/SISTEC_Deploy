<UserControl x:Class="sistecDesktop.Views.Popups.ApproveTicketsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sistecDesktop.Views.Popups"
             xmlns:viewModels="clr-namespace:sistecDesktop.ViewModels"
             xmlns:converters="clr-namespace:sistecDesktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid>
            <!-- DataGrid de Chamados para Aprovação -->
            <DataGrid ItemsSource="{Binding Tickets}" RowHeight="50"
                      SelectedItem="{Binding SelectedTicket, Mode=TwoWay}"
                      Style="{StaticResource MyDataGrid}"
                      AutoGenerateColumns="False"
                      Margin="10"
                      IsReadOnly="True">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Título" Binding="{Binding Title}" Width="200"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Categoria" Binding="{Binding Categoria}" Width="100"/>
                    <DataGridTextColumn Header="Usuário" Binding="{Binding UsuarioAbertura}" Width="120"/>
                    <DataGridTextColumn Header="Abertura" Binding="{Binding CreatedAt, StringFormat='dd/MM/yyyy HH:mm'}" Width="130"/>

                    <!-- Coluna de Ações: Aprovar/Rejeitar -->
                    <DataGridTemplateColumn Header="Ações" Width="250">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Aprovar"
                                            BorderBrush="#22C55E"
                                            Tag="/images/circle-check-green.png"
                                            Style="{StaticResource TicketButtons}"
                                            Command="{Binding DataContext.ApproveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" Margin="0,0,10,0"/>
                                    <Button Content="Rejeitar"
                                            BorderBrush="#fa0000"
                                            Tag="/images/x.png"
                                            Style="{StaticResource TicketButtons}"
                                            Command="{Binding DataContext.OpenRejectModalCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>

            <!-- Modal de Rejeição
            Mostra por cima da tela se ShowRejectModal for true -->
            <Border Background="#CC000000" Visibility="{Binding ShowRejectModal, Converter={StaticResource BoolToVisibilityConverter}}"
                    CornerRadius="8"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="0"
                    Panel.ZIndex="3">
                <Border VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Background="White" Padding="20" CornerRadius="8">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Informe o motivo da rejeição:" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBox Height="100"
                                 Text="{Binding MotivoRejeicao, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"/>
                            <TextBlock Text="Mínimo 10 caracteres." Foreground="Gray" FontSize="12" Margin="0,5,0,10"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                <Button Content="Cancelar"
                                    Command="{Binding CancelRejectCommand}" Margin="0,0,10,0"/>
                                <Button Content="Rejeitar"
                                    Command="{Binding RejectCommand}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Border Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" 
                CornerRadius="8" Panel.ZIndex="5"/>
    </Grid>
</UserControl>
