<UserControl x:Class="sistecDesktop.Views.Pages.RestoreUsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sistecDesktop.Views.Pages"
             xmlns:converters="clr-namespace:sistecDesktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!--#region Converters-->
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:EnableRestoreConverter x:Key="EnableRestoreConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>
    <!--#endregion-->

    <Grid>
        <Border Grid.Row="1"
                Margin="10 10 10 10"
                Padding="10"
                BorderBrush="{DynamicResource brush-frenchGray}"
                BorderThickness="1"
                CornerRadius="8"
                HorizontalAlignment="Stretch"
                Background="{DynamicResource brush-lavenderMist}">

            <Grid>

                <!--#region Definições do Grid-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!--#endregion-->

                <StackPanel Grid.Row="0" Grid.ColumnSpan="1">

                    <TextBlock Text="Usuários Deletados"
                           FontSize="24" Margin="10, 10, 0, 10"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource MontserratBold}"/>

                    <!-- Mensagem de erro -->
                    <TextBlock Text="{Binding Error}"
                               FontFamily="{StaticResource MontserratRegular}"
                               Foreground="Red"
                               FontWeight="Bold"
                               Visibility="{Binding Error, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!--Bloco de pesquisa-->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left">

                        <TextBlock Text="Pesquisar: " Margin="10 0 0 0"
                                   FontFamily="{StaticResource MontserratRegular}"/>

                        <TextBox Width="300"
                                 Margin="5,0,12,0"
                                 VerticalAlignment="Center"
                                 Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"/>
                        
                    </StackPanel>
                </StackPanel>
                
                <!-- Estado de carregamento -->
                <ProgressBar Height="4" IsIndeterminate="True" Grid.Row="2" Grid.ColumnSpan="2"
                         VerticalAlignment="Top" Margin="10 0 10 0"
                         Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <Button Content="Atualizar" Grid.Column="1"
                        Style="{StaticResource HomeButtons}"
                        Foreground="{StaticResource brush-peachOrange}"
                        Background="Transparent"
                        Height="50" Width="100"
                        Margin="20"
                        HorizontalAlignment="Right"
                        Command="{Binding ReloadCommand}"/>
                <!-- Barra superior com título, busca e atualizar -->

                <!-- DataGrid -->
                <DataGrid ItemsSource="{Binding UsuariosDeletados}" AutoGenerateColumns="False" 
                          Grid.Row="2" Grid.ColumnSpan="2" RowHeight="50"
                          Margin="10,10,10,0"
                          Style="{StaticResource MyDataGrid}"
                          SelectedItem="{Binding SelectedBackup}"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          RowHeaderWidth="0">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding UsuarioOriginalId}"/>
                        <DataGridTextColumn Header="Nome" Binding="{Binding Name}" Width="180"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="180"/>
                        <DataGridTextColumn Header="Motivo Deleção" Binding="{Binding MotivoDelecao}" Width="200"/>
                        <DataGridTextColumn Header="Deletado por" Binding="{Binding UsuarioQueDeletou}" Width="150"/>
                        <DataGridTextColumn Header="Data" Binding="{Binding DataDelecao, StringFormat=dd/MM/yyyy HH:mm}" Width="120"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding StatusBackup}" Width="110"/>
                        <DataGridTemplateColumn Header="Restauração" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Restaurar"
                                            Tag="/images/restore-icon.png"
                                            BorderBrush="#22C55E"
                                            Style="{StaticResource TicketButtons}"
                                    Command="{Binding DataContext.RestoreCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                                Visibility="{Binding CanRestore,
                            Converter={StaticResource BoolToVisibilityConverter}}"
                                    IsEnabled="{Binding StatusBackup, Converter={StaticResource EnableRestoreConverter}}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
