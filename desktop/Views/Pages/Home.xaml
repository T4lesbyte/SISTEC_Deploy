<UserControl x:Class="sistecDesktop.Views.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sistecDesktop.Views.Pages"
             xmlns:converters="clr-namespace:sistecDesktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <!--#region  Converters-->
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <!--#endregion-->
    
    <Grid>
        <!--#region Definições do Grid-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--#region Grid dos botões-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--#region Abrir Chamado -->
            <Button x:Name="btnAbrirChamado" Grid.Column="0"
                    Style="{StaticResource HomeButtons}"
                    Background="{StaticResource brush-mistyRose}"
                    Command="{Binding OpenTicketCommand}"
                    HorizontalContentAlignment="Stretch">

                <DockPanel>
                    <TextBlock Text="Abrir Chamado" Margin="15" FontSize="14"
                               VerticalAlignment="Center"/>

                    <Border BorderThickness="0" Margin="15"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="{StaticResource brush-lavenderMist}"
                            CornerRadius="5">

                        <Image Source="/images/plus.png"
                               HorizontalAlignment="Center"
                               Height="40" Width="40"/>
                    </Border>
                </DockPanel>
            </Button>
            <!--#endregion-->

            <!--#region Meus Chamados -->
            <Button x:Name="btnMeusChamados" Grid.Column="1"
                    Style="{StaticResource HomeButtons}"
                    Background="{StaticResource brush-lavenderMist}"
                    Command="{Binding MyTicketsCommand}"
                    HorizontalContentAlignment="Stretch">

                <DockPanel>
                    <TextBlock Text="Meus Chamados" Margin="15" FontSize="14"
                               VerticalAlignment="Center"/>

                    <Border BorderThickness="0" Margin="15"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="{StaticResource brush-mistyRose}"
                            CornerRadius="5">

                        <Image Source="/images/user-orange.png"
                               HorizontalAlignment="Center"
                               Height="40" Width="40"/>
                    </Border>
                </DockPanel>
            </Button>
            <!--#endregion-->

            <!--#region Aprovar Chamados -->
            <Button x:Name="btnAprovarChamados" Grid.Column="2"
                    Style="{StaticResource HomeButtons}"
                    Background="{StaticResource brush-lavenderMist}"
                    Command="{Binding ApproveTicketsCommand}"
                    Visibility="{Binding canApprove, Converter={StaticResource BoolToVisibilityConverter}}"
                    HorizontalContentAlignment="Stretch">

                <DockPanel>
                    <TextBlock Text="Aprovar Chamados" Margin="15" FontSize="14"
                               VerticalAlignment="Center"/>

                    <Border BorderThickness="0" Margin="15"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="{StaticResource brush-mistyRose}"
                            CornerRadius="5">

                        <Image Source="/images/check.png"
                               HorizontalAlignment="Center"
                               Height="40" Width="40"/>
                    </Border>
                </DockPanel>
            </Button>
            <!--#endregion-->

        </Grid>
        <!--#endregion-->


        <!--#region Grid do DataGrid-->
        <Grid Grid.Row="2">
            <!--#region Definições do Grid-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--#endregion-->


            <!--#region DataGrid-->

            <local:Tickets ViewModel="{Binding TicketsViewModel}" Grid.Row="2" Grid.ColumnSpan="2"/>
            
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
    </Grid>
</UserControl>