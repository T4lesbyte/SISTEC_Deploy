<UserControl x:Class="sistecDesktop.Views.Pages.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sistecDesktop.Views.Pages"
             xmlns:components="clr-namespace:sistecDesktop.Views.Components"
             xmlns:converters="clr-namespace:sistecDesktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!--#region Converters-->
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:EnableRestoreConverter x:Key="EnableRestoreConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>
    <!--#endregion-->

    <Grid>
        <Border Grid.Row="1"
        Margin="10 10 10 10"
        Padding="10"
        BorderBrush="{DynamicResource brush-frenchGray}"
        BorderThickness="1"
        CornerRadius="8"
        HorizontalAlignment="Stretch"
        Background="{DynamicResource brush-lavenderMist}">

            <Grid>
                <!--#region Definições do Grid-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!--#endregion-->

                <!--#region Header-->
                <StackPanel Grid.Row="0" Grid.ColumnSpan="1">
                    <TextBlock Text="Usuários" 
                           FontSize="24" Margin="10, 10, 0, 10"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource MontserratBold}"/>


                    <!-- Mensagem de erro -->
                    <TextBlock Text="{Binding Error}"
                               FontFamily="{StaticResource MontserratRegular}"
                               Foreground="Red" FontWeight="Bold"
                        Visibility="{Binding Error, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!--Bloco de pesquisa-->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left">

                        <TextBlock Text="Pesquisar: " Margin="10 0 0 0"
                                   FontFamily="{StaticResource MontserratRegular}"/>

                        <TextBox Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                                 Width="300" Margin="5,0,12,0"
                                 VerticalAlignment="Center"/>

                    </StackPanel>
                </StackPanel>

                <!-- Estado de carregamento -->
                <ProgressBar Height="4" IsIndeterminate="True" Grid.Row="2" Grid.ColumnSpan="2"
         VerticalAlignment="Top" Margin="10 5 10 0"
         Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <!--#endregion-->

                <!--#region Botões-->
                <StackPanel Orientation="Horizontal" Grid.Column="1"
                            HorizontalAlignment="Right">

                    <Button Content="Cadastrar Usuário"
                        Command="{Binding OpenCreateUserCommand}"
                        Visibility="{Binding canEditOrDelete, Converter={StaticResource BoolToVisibilityConverter}}"
                        Style="{StaticResource HomeButtons}" 
                        Foreground="{StaticResource brush-vibrantViolet}"
                        Width="150" Height="50" 
                        FontSize="14"
                        Background="Transparent"
                        HorizontalAlignment="Right"/>

                    <Button Content="Atualizar" Grid.Column="1" 
                        Command="{Binding LoadUsersCommand}"
                        Style="{StaticResource HomeButtons}" 
                        Foreground="{StaticResource brush-peachOrange}"
                        FontSize="14" Width="100" Height="50"
                        Background="Transparent"
                        HorizontalAlignment="Right"/>


                </StackPanel>
                <!--#endregion-->

                <!--#region DataGrid-->
                <DataGrid Grid.Row="2" Grid.ColumnSpan="2"
                          RowHeight="50"
                          Margin="10,15,10,0"
                          ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser}"
                          Style="{StaticResource MyDataGrid}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                            Binding="{Binding Id}" 
                                            Width="60"/>

                        <DataGridTextColumn Header="Nome" 
                                            Binding="{Binding Name}" 
                                            Width="*"
                                            MinWidth="200"/>

                        <DataGridTextColumn Header="Email" 
                                            Binding="{Binding Email}" 
                                            Width="*"
                                            MinWidth="200"/>

                        <DataGridTextColumn Header="Cargo" 
                                            Binding="{Binding Cargo}" 
                                            Width="150"/>

                        <DataGridTextColumn Header="Setor" 
                                            Binding="{Binding Setor}" 
                                            Width="150"/>

                        <DataGridTextColumn Header="Perfil" 
                                            Binding="{Binding PerfilNome}" 
                                            Width="100"/>

                        <DataGridTextColumn Header="Telefone" 
                                            Binding="{Binding Telefone}" 
                                            Width="120"/>


                        <DataGridTemplateColumn Header="Ações" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Style="{StaticResource ViewButton}"
                                                Tag="/images/edit-button.png"
                                                Visibility="{Binding canEdit , Converter={StaticResource BoolToVisibilityConverter}}"
                                                Command="{Binding DataContext.OpenEditUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>

                                        <Button Style="{StaticResource ViewButton}"
                                                Tag="/images/delete-button.png"
                                                Visibility="{Binding canDelete , Converter={StaticResource BoolToVisibilityConverter}}"
                                                Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>

                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <!--#endregion-->
            </Grid>
        </Border>
    </Grid>
</UserControl>
