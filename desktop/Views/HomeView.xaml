<UserControl x:Class="sistecDesktop.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sistecDesktop.Views"
             xmlns:converters="clr-namespace:sistecDesktop.Converters"
             mc:Ignorable="d"
             d:DesignHeight="768" d:DesignWidth="1366">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource gradient-background}">
        
        <!--#region Definições do Grid-->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--#endregion-->

        <!--#region Logo Sistec-->
        <Grid Grid.Column="0">

            <Border Background="{StaticResource brush-midnightNavy}"
                    BorderBrush="{StaticResource brush-frenchGray}"
                    BorderThickness="0 0 0 1" Padding="15"
                    Height="85">

                <Image Source="/images/sistec-white.png"
                       Margin="10 10 10 10"
                       HorizontalAlignment="Left"/>
            </Border>
        </Grid>
        <!--#endregion-->

        <!--#region Cabeçalho-->
        <Grid Grid.Column="1" Grid.ColumnSpan="5">

            <Border Background="{StaticResource brush-lavenderMist}"
                    BorderBrush="{StaticResource brush-frenchGray}"
                    BorderThickness="0 0 0 1"
                    Width="auto" Padding="0 0 15 0">

                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                    
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/images/user-orange.png" 
                                   Width="20" Height="20" Margin="0 0 10 0"/>
                            <TextBlock Text="{Binding NameCurrentUser}" VerticalAlignment="Center" 
       Foreground="{StaticResource brush-peachOrange}"
       FontFamily="{StaticResource MontserratRegular}"/>
                        </StackPanel>
                        
                    
                    <Button x:Name="btnLogout" Height="40"
                            Style="{StaticResource ImageButton}"
                            Command="{Binding LogoutCommand}">

                        <StackPanel Orientation="Horizontal">
                            <Image Source="/images/log-out.png" 
                                   Width="20" Height="20" Margin="0 0 10 0"/>
                            <TextBlock Text="Sair" VerticalAlignment="Center" 
                                Foreground="{StaticResource brush-peachOrange}"
                                FontFamily="{StaticResource MontserratRegular}"/>
                        </StackPanel>

                    </Button>

                </StackPanel>

            </Border>
        </Grid>
        <!--#endregion-->
        
        <!--#region Menu Lateral-->
        <Border Grid.Row="1" Grid.RowSpan="4" Grid.Column="0"
                HorizontalAlignment="Stretch"
                Margin="0 0 0 0" Padding="15"
                Height="auto"
                Background="{StaticResource brush-midnightNavy}">

            <StackPanel HorizontalAlignment="Left" 
                        VerticalAlignment="Top">

                <Button x:Name="btnHome" 
                        Style="{StaticResource ImageButton}"
                        Height="40"
                        Command="{Binding SelecionarPaginaCommand}"
                        CommandParameter="Home"
                        Tag="{Binding TagHome}">

                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/house.png" Width="20" Height="20" Margin="0 0 10 0"/>
                        <TextBlock Text="Home" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnDashboard" 
                        Style="{StaticResource ImageButton}"
                        Visibility="{Binding canAccessDashboard, Converter={StaticResource BoolToVisibilityConverter}}"
                        Height="40"
                        Command="{Binding SelecionarPaginaCommand}"
                        CommandParameter="Dashboard"
                        Tag="{Binding TagDashboard}">

                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/layout-grid.png" Width="20" Height="20" Margin="0 0 10 0"/>
                        <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                    </StackPanel>

                </Button>

                <Button x:Name="btnChamados" 
                        Style="{StaticResource ImageButton}"
                        Height="40"
                        Command="{Binding SelecionarPaginaCommand}"
                        CommandParameter="Chamados"
                        Tag="{Binding TagChamados}">

                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/circle-question-mark.png" Width="20" Height="20" Margin="0 0 10 0"/>
                        <TextBlock Text="Chamados" VerticalAlignment="Center"/>
                    </StackPanel>

                </Button>

                <Button x:Name="btnUsuarios" Height="40"
                        Style="{StaticResource ImageButton}"
                        Visibility="{Binding canAccessUsers, Converter={StaticResource BoolToVisibilityConverter}}"
                        Command="{Binding UsersMenuCommand}">

                    <StackPanel Orientation="Horizontal">
                        <Image Source="/images/user.png" Width="20" Height="20" Margin="0 0 10 0"/>
                        <TextBlock Text="Gerenciar Usuários" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <StackPanel Margin="20 0 0 0" Visibility="{Binding MenuUsuariosExpandido, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Style="{StaticResource ImageButton}"
                            Height="35"
                            Content="Usuários Ativos"
                            Command="{Binding SelecionarPaginaCommand}"
                            CommandParameter="UsuariosAtivos"
                            Tag="{Binding TagUsuariosAtivos}"/>
                    
                    <Button Style="{StaticResource ImageButton}"
                            Height="35"
                            Content="Usuários Deletados"
                            Command="{Binding SelecionarPaginaCommand}"
                            CommandParameter="UsuariosDeletados"
                            Tag="{Binding TagUsuariosDeletados}"/>
                </StackPanel>

            </StackPanel>
        </Border>
        <!--#endregion-->

        <!--#region Conteúdo -->
        <ContentControl Grid.Row="1" Grid.RowSpan="3"
                        Grid.Column="1" Grid.ColumnSpan="5"
                        Content="{Binding CurrentContent}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>
        <!--#endregion-->
        
    </Grid>
</UserControl>
