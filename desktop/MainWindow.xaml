<Window x:Class="sistecDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sistecDesktop"
        xmlns:viewmodels="clr-namespace:sistecDesktop.ViewModels"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Sistec"        
        MinWidth="1300"
        MinHeight="600"
        Width="1600" Height="800"
        MaxWidth="1920"
        MaxHeight="1080"
        SizeToContent="Manual"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        WindowStartupLocation="CenterScreen" 
        
      
        Icon="/images/logo-purple.ico"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel, IsDesignTimeCreatable=False}">

    <Grid>
        <!-- Apenas um ContentControl que mostra o SelectedViewModel -->
        <ContentControl Content="{Binding SelectedViewModel}"/>
    </Grid>
    
</Window>
